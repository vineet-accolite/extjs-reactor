{
  "name": "@extjs/reactor-boilerplate16",
  "private": true,
  "version": "2.0.0",
  "description": "A foundation for React 16 apps built with ExtReact components.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "start": "webpack-dev-server --progress --colors",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --env.prod=true --progress --colors",
    "prod": "cd build && static-server --port 8080",
    "test": "jest",
    "update-snapshots": "jest -u",
    "pretest": "webpack --progress",
    "preupdate-snapshots": "webpack --progress"
  },
  "author": "Sencha, Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sencha/extjs-reactor.git"
  },
  "license": "MIT",
  "dependencies": {
    "@extjs/ext-react": "^6.5.3",
    "@extjs/reactor16": "^2.0.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
		"react-router-dom": "^4.2.2",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.1",
    "@extjs/reactor-babel-plugin": "^2.0.0",
    "@extjs/reactor-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "open-browser-webpack-plugin": "0.0.5",
    "babel-loader": "^7.1.4",
    "portfinder": "^1.0.13",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^22.4.3",
    "react-hot-loader": "^4.0.1",
    "react-test-renderer": "^16.3.1",
    "rimraf": "^2.6.2",
    "static-server": "^2.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFiles": [
      "./node_modules/@extjs/reactor/jest/setup.js",
      "./build/ext-react/ext.js"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "enzyme"
    ]
  }
}
